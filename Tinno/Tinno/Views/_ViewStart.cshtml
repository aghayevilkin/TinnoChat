@{
    string CurrentReq = Convert.ToString(Context.Request.HttpContext.Request.RouteValues["Controller"]);
    dynamic Layout;
    switch (CurrentReq)
    {
        case "User":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        default:
            //Two layout
            Layout = "~/Views/Shared/_LayoutTwo.cshtml";
            break;
    }
}  