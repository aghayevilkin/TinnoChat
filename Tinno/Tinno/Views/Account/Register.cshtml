@model VmBase
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutTwo.cshtml";
}

<div class="form-wrapper">

    <!-- logo -->
    <div class="logo my-5">
        <img src="~/media/img/logo-full-2x.png" alt="logo">
    </div>
    <!-- ./ logo -->

    <h5>Create account</h5>

    <!-- form -->
    <form id="register_form" name="register_form" asp-controller="Account" asp-action="Register">
        <div class="text text-danger text-center" asp-validation-summary="All"></div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="RegisterViewModel.Name" placeholder="Firstname" autofocus>
            <span class="text text-danger" asp-validation-for="RegisterViewModel.Name"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="RegisterViewModel.Surname" placeholder="Lastname">
            <span class="text text-danger" asp-validation-for="RegisterViewModel.Surname"></span>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" asp-for="RegisterViewModel.Email" placeholder="Email">
            <span class="text text-danger" asp-validation-for="RegisterViewModel.Email"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="RegisterViewModel.Password" placeholder="Password">
            <span class="text text-danger" asp-validation-for="RegisterViewModel.Password"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="RegisterViewModel.ConfirmPassword" placeholder="Confirm Password">
            <span class="text text-danger" asp-validation-for="RegisterViewModel.ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="RegisterViewModel.Gender" asp-items="@Html.GetEnumSelectList<Gender>()">
            </select>
            <span class="text text-danger" asp-validation-for="RegisterViewModel.Gender"></span>
        </div>
        <button class="btn btn-primary">Sign Up</button>
        <div class="my-5">
            Already have an account? <a asp-controller="account" asp-action="login">Sign in now!</a>
        </div>
    </form>
    <!-- ./ form -->

</div>